<div class="car">
  <h1>My Garage</h1>

  <% @favourites.each do |favourite| %>
    <div class="car-info">
      <div class="car-details">
        <div class="image">
          <%= image_tag(favourite.car.image_url) %>
        </div>
        <div class="heading">
          <h2><%= favourite.car.brand %></h2>
          <h3> <%= favourite.car.model %> </h3>
          <p> <%= favourite.car.year %>  | <%= favourite.car.fuel %></p>
        </div>
      </div>
        <%= link_to  favourite_path(favourite),  data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
    </div>

  <% end %>
</div>
